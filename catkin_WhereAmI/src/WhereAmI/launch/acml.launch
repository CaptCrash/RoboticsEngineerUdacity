<?xml version="1.0"?>
<launch>
    <!--Map Server-->
    <arg name="map_file" default="$(find WhereAmI)/maps/mymap.yaml"/>
    <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)"/>
    
    <!--AMCL Node-->
    <node name="amcl" pkg="amcl" type="amcl" output="screen">
        <!--remap from="/scan" to="WhereAmI/laser/scan"/-->
        <param name="odom_frame_id" value="odom"/>
        <param name="odom_model_type" value="diff-corrected"/>
        <param name="base_frame_id" value="robot_footprint"/>
        <param name="global_frame_id" value="map"/>
    </node>

    <!--Move Node-->
    <node name="move_base" pkg="move_base" type="move_base" respawn="false" output="screen">
        <!--remap from="/scan" to="WhereAmI/laser/scan"/-->
        <param name="base_global_planner" value="navfn/NavfnROS"/>
        <param name="base_local_planner" value="base_local_planner/TrajectoryPlannerROS"/>
        <!--Laser Parameters-->
        <param name="laser_z_hit" value=".9"/>
        <param name="laser_z_rand" value=".1"/>
        <param name="laser_max_beams" value="720"/>
        <param name="laser_min_range" value=".1"/>
        <param name="laser_max_beams" value="-1"/>
        <!--General Parameters-->
        <param name="max_particles" value="50"/>
        <!--Initial Pose-->
        <param name="initial_pose_a" value="-1.5707"/>

        <rosparam file="$(find WhereAmI)/launch/config/costmap_common_params.yaml" command="load" ns="global_costmap"/>
        <rosparam file="$(find WhereAmI)/launch/config/costmap_common_params.yaml" command="load" ns="local_costmap"/>
        <rosparam file="$(find WhereAmI)/launch/config/local_costmap_params.yaml" command="load"/>
        <rosparam file="$(find WhereAmI)/launch/config/global_costmap_params.yaml" command="load"/>
        <rosparam file="$(find WhereAmI)/launch/config/base_local_planner_params.yaml" command="load"/>
    </node>
</launch>